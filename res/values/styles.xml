<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.HalalSpot" parent="Theme.Sherlock.Light">
		<item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
		<item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
	</style>	
	<!-- "Implementation" of our ABS custom theme -->
	<style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
		<item name="background">@android:color/white</item>
		<item name="android:background">@android:color/white</item>
		<item name="titleTextStyle">@style/HalalSpot.ActionBar.TitleTextStyle</item>
		<item name="android:titleTextStyle">@style/HalalSpot.ActionBar.TitleTextStyle</item>
		<item name="subtitleTextStyle">@style/HalalSpot.ActionBar.SubtitleTextStyle</item>
		<item name="android:subtitleTextStyle">@style/HalalSpot.ActionBar.SubtitleTextStyle</item>
	</style>

	<style name="HalalSpot.ActionBar.SubtitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Subtitle">
		<item name="android:textColor">@color/dark_grey</item>
		<item name="android:textSize">14sp</item>
	</style>
	
	<style name="HalalSpot.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/darker_grey</item>
	</style>
    
    <style name="DarkButton">
		<item name="android:background">@drawable/selector_dark_btn</item>
		<item name="android:minHeight">45dp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">bold</item>
	</style>
	
    <style name="LightButton">
		<item name="android:background">@drawable/selector_light_btn</item>
		<item name="android:minHeight">45dp</item>
		<item name="android:textColor">@color/dark_grey</item>
		<item name="android:textStyle">bold</item>
	</style>

</resources>
